<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content" >
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                           
                            
                            <div class="col-lg-6" style="margin-left: 350px; width: 100%;">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Update Data</strong> 
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/editadmindata" method="post" enctype="multipart/form-data" class="form-horizontal" >
                                            <input type="hidden" value="<%= addata.id %>" name="Editid">
                                            <div class="row form-group">
                                               
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter Frist Name :- </label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" name="fname" placeholder="Enter Frist Name" class="form-control" value="<%= name[0] %>">
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter Last Name :- </label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" name="lname" placeholder="Enter Last Name" class="form-control" value="<%= name[1] %>">
                                                    
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">Enter Your Email :-</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="email" id="email-input" name="email" placeholder="Enter Email" class="form-control" value="<%= addata.email %>">
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">Gender :-</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-radio1" class="form-check-label ">
                                                            <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input"  <% if(addata.gender=='male') { %> <%= 'checked' %> <% } %> >Male
                                                        </label>
                                                        <label for="inline-radio2" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input"  <% if(addata.gender=='female') { %> <%= 'checked' %> <% } %> >Female
                                                        </label>
                                                        
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">Hobby :-</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-checkbox1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox1" name="hobby" value="coding" class="form-check-input" <% if(addata.hobby.includes('coding')) { %> <%= ' checked' %> <% } %>>Coding
                                                        </label>
                                                        <label for="inline-checkbox2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox2" name="hobby" value="music" class="form-check-input" <% if(addata.hobby.includes('music')) { %> <%= ' checked' %> <% } %>>Music
                                                        </label>
                                                        <label for="inline-checkbox3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox3" name="hobby" value="reading" class="form-check-input" <% if(addata.hobby.includes('reading')) { %> <%= ' checked' %> <% } %>>Reading
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <% var city = ['surat','vadodara','ahemadabad'] %>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select City :-</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="city" id="select" class="form-control">
                                                        <option value="0">Please select Your City</option>
                                                        <% city.map((v)=>{ %>
                                                            <option value="<%= v %>"<% if(addata.city==v) { %> <%= 'selected' %> <% } %> ><%= v %></option>
                                                       <% })%>
                                                       
                                                    </select>
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Description :-</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="3" placeholder="Content..." class="form-control"><%= addata.description %></textarea>
                                                </div>
                                            </div>
                                           
                                            
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="adminImages" class="form-control-file">
                                                    <img src="<%= addata.adminImages %>" alt="image" height="100px">
                                                </div>
                                            </div>
                                            <!-- <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-multiple-input" class=" form-control-label">Multiple File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                                </div>
                                            </div> -->
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-dot-circle-o"></i> Submit
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm">
                                                <i class="fa fa-ban"></i> Reset
                                            </button>
                                        </div>
                                    </div>
                                    
                                </form>
                            </div>
                      
                            
                            
                        </div>
                        

                        <%- include('footer') %>