<%- include('../header') %>


    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">


                    <div class="col-lg-6" style="margin-left: 350px; width: 100%;">
                        <div class="card">
                            <div class="card-header">
                                <strong>Admin Data</strong>
                            </div>
                            <div class="card-body card-block">
                                <form action="/admin/subcategory/editsubcategorydata" method="post"
                                    enctype="multipart/form-data" class="form-horizontal">
                                    <input type="hidden" name="Editid" value="<%= subcategoryData.id %>">

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="select" class=" form-control-label">Select categorized
                                                :-</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <select name="category_id" id="select" class="form-control">
                                                <option value="0">Please select Your categorized</option>
                                                <% categoryData.map((v)=>{ %>
                                                    <option value="<%= v.id %>" <%if(v.id== subcategoryData.category_id.id){%>
                                                        <%= "selected" %>
                                                        <%}%>
                                                            >
                                                            <%= v.category %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Enter Title :- </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="title" placeholder="Enter Title"
                                                class="form-control" value="<%= subcategoryData.title %>">
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">Description
                                                :-</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="description" id="textarea-input" rows="3"
                                                placeholder="Content..."
                                                class="form-control"><%= subcategoryData.description %></textarea>
                                        </div>
                                    </div>



                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class=" form-control-label">Upload Sub Category Post
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="file" id="file-input" name="subcategory_image"
                                                class="form-control-file">
                                        </div>
                                    </div>
                                    <!-- <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-multiple-input" class=" form-control-label">Multiple File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                                </div>
                                            </div> -->
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        </div>

                        </form>
                    </div>



                </div>


                <%- include('../footer') %>